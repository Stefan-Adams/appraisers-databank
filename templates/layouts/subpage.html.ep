<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <title><%= title %></title>
        %= asset 'adb.css'
        <meta name="viewport" content="width=device-width">
    </head>
    <body>
        <div class="int header">
            <div class="flex container">
                <h1 class="title"><%= link_to "Appraiser's DataBank" => 'about/adb' %></h1>
                    <ul class="logged-out-nav nav">
                        <!--
                        <%= link_to Logout => 'logout' %><br />
                        <%= link_to Profile => 'profile' %><br />
                        % if ( session('user') && session('user')->{admin} ) {
                        <%= link_to Admin => 'admin' %><br />
                        % }
                        -->
                        <li><%= link_to "Login" => 'login' %></li>
                        <li><%= link_to "Sign Up" => 'register', class => 'stand-out' %></li>
                        <li class="current"><%= link_to "Learn More" => 'about/learn' %></li>
                    </ul>
            </div>
        </div>
        <div class="content-area">
            <%= content %>
        </div>
        <div class="footer">
           <div class="container">
                <ul class="footer-nav">
                    <li><%= link_to "About Us" => 'about' %></li>
                    <li><%= link_to "Contact" => 'contact' %></li>
                    <li><%= link_to "Terms of Service" => 'tos' %></li>
                </ul>
           </div>
        </div>
    </body>
</html>