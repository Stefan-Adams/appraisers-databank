% layout 'subpage';
<div class="text">
    <%= stash 'success' %><%= stash 'error' %><%= flash 'f_success' %><%= flash 'f_error' %><br />
    <h2>Welcome to ADB</h2>
    %= form_for login => (method => 'POST') => begin
        %= label_for email => 'Email'
        <br>
        %= email_field 'email'
        <br>
        %= label_for password => 'Password'
        <br>
        %= password_field 'password'
        <br>
        %= submit_button
    % end
</div>
