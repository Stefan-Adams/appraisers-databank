<!DOCTYPE html>
<html>
  <head>
    <title>Login</title>
    %= asset 'adb.css'
  </head>
  <body>
    <%= link_to 'Home' => 'home' %><br />
    Login or <%= link_to Register => 'register' %><br />
    <%= stash 'success' %><%= stash 'error' %><%= flash 'f_success' %><%= flash 'f_error' %><br />
    %= form_for login => (method => 'POST') => begin
      %= label_for email => 'Email'
      <br>
      %= email_field 'email'
      <br>

      %= label_for password => 'Password'
      <br>
      %= password_field 'password'
      <br>

      %= submit_button
    % end
  </body>
</html>