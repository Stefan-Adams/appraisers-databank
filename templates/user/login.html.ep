% layout 'subpage';
<h2 class="page-title">Welcome to ADB</h2>
<div class="text">
    %= form_for login => (method => 'POST') => begin
        %= label_for email => 'Email'
        <br>
        %= email_field 'email'
        <br>
        %= label_for password => 'Password'
        <br>
        %= password_field 'password'
        <br>
        %= submit_button 'Log In'
    % end
</div>
