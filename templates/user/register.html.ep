<!DOCTYPE html>
<html>
  <head>
    <title>Register</title>
    %= asset 'adb.css'
  </head>
  <body>
    <%= link_to 'Home' => 'home' %><br />
    <%= stash 'success' %><%= stash 'error' %><%= flash 'f_success' %><%= flash 'f_error' %><br />
    Register<br />
    %= form_for register => (method => 'POST', enctype => 'multipart/form-data') => begin
      %= label_for email => 'Email (Required)'
      <br>
      %= email_field 'email'
      <br>

      %= label_for password => 'Password (Required, minimum 6 characters)'
      <br>
      %= password_field 'password'
      <br>

      %= label_for pass_again => 'Password again (equal to the value above)'
      <br>
      %= password_field 'pass_again'
      <br>

      %= label_for slid => 'State License Number (Required)'
      <br>
      %= text_field 'slid'
      <br>

      %= label_for taxid => 'Federal ID or Social Security Number (Required)'
      <br>
      %= text_field 'taxid'
      <br>

      %= label_for w9 => 'W-9 (Required)'
      <br>
      %= file_field 'w9'
      <br>

      %= label_for firstname => 'First Name'
      <br>
      %= text_field 'firstname'
      <br>

      %= label_for lastname => 'Last Name'
      <br>
      %= text_field 'lastname'
      <br>

      %= label_for address => 'Address'
      <br>
      %= text_field 'address'
      <br>

      %= label_for city => 'City'
      <br>
      %= text_field 'city'
      <br>

      %= label_for state => 'State'
      <br>
      %= text_field 'state'
      <br>

      %= label_for zip => 'Zip'
      <br>
      %= text_field 'zip'
      <br>

      %= label_for phone => 'Phone'
      <br>
      %= text_field 'phone'
      <br>

      %= label_for tos => 'I agree to the Terms of Service'
      <br>
      %= check_box 'tos' => 1
      <br>

      %= submit_button
    % end
    <div id="tos_text">I agree to these rules:</div>
  </body>
</html>